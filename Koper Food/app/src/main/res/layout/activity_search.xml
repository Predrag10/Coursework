<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <EditText
        android:id="@+id/searchName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Search by dish name"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/goName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="280dp"/>

    <TextView
        android:id="@+id/priceText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_alignTop="@+id/searchName"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/difficultyText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:layout_alignTop="@+id/searchName"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="250dp"/>


    <Spinner
        android:id="@+id/priceSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/priceText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >
    </Spinner>

    <Spinner
        android:id="@+id/difficultySpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/priceText"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        >
    </Spinner>

    <TextView
        android:id="@+id/orText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="30sp"
        android:layout_alignTop="@+id/priceText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>


    <EditText
        android:id="@+id/ingredientSearch"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Type name of ingredient here"
        android:layout_alignTop="@+id/orText"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/addIngredientToSearch"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignTop="@+id/orText"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="280dp"/>

    <Button
        android:id="@+id/editSearchIngredients"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addIngredientToSearch"
        android:text="EDIT"
        android:layout_marginLeft="330dp"/>

    <Button
        android:id="@+id/searchIngredientsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignTop="@id/addIngredientToSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>

</RelativeLayout>